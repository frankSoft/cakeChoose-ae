{
  "name": "cakes",
  "description": "蛋糕信息数据模型",
  "fields": [
    {
      "name": "name",
      "type": "string",
      "required": true,
      "description": "蛋糕名称"
    },
    {
      "name": "category",
      "type": "string",
      "required": true,
      "description": "蛋糕分类（儿童款、生日款、婚礼款、节日款）"
    },
    {
      "name": "size",
      "type": "string",
      "required": true,
      "description": "蛋糕尺寸（6寸、8寸、10寸、12寸）"
    },
    {
      "name": "flavor",
      "type": "string",
      "required": true,
      "description": "蛋糕口味（巧克力、奶油、水果、芒果、提拉米苏）"
    },
    {
      "name": "price",
      "type": "number",
      "required": true,
      "description": "蛋糕价格"
    },
    {
      "name": "description",
      "type": "string",
      "required": false,
      "description": "蛋糕描述"
    },
    {
      "name": "image",
      "type": "string",
      "required": false,
      "description": "蛋糕图片URL"
    },
    {
      "name": "createdAt",
      "type": "datetime",
      "required": false,
      "description": "创建时间"
    },
    {
      "name": "updatedAt",
      "type": "datetime",
      "required": false,
      "description": "更新时间"
    }
  ]
}